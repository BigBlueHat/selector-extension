{
    "name": "Web Annotation Selector support",
    "version": "1.0",
    "background": {
        "scripts": ["browser-polyfill.js", "background_script.js"]
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["browser-polyfill.js", "content_script.js"],
        "run_at": "document_end"
    }],
    "permissions": [
        "<all_urls>",
        "clipboardWrite",
        "contextMenus"
    ],
    "applications": {
        "gecko": {"id": "selector-extension@example"}
    },
    "manifest_version": 2
}
